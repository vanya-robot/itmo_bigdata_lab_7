APP_NAME=lab6-pyspark-app

# Postgres settings
PG_HOST=postgres
PG_PORT=5432
PG_DB=postgres
PG_USER=postgres
PG_PASSWORD=postgres
PG_TABLE_SOURCE=source_data
PG_TABLE_PREDICTIONS=predictions

# Model path
MODEL_PATH=models/kmeans_model

# Spark settings (defaults; can be adjusted)
# SPARK_MASTER: spark master URL (e.g. local[*], spark://host:7077). Changing this switches between local mode and cluster mode.
SPARK_MASTER=local[*]
# Memory and cores for driver/executor. Increasing these allows Spark to use more memory/CPU but requires more host resources.
SPARK_DRIVER_MEMORY=1g
SPARK_EXECUTOR_MEMORY=1g
SPARK_DRIVER_CORES=1
SPARK_EXECUTOR_CORES=1
SPARK_NUM_EXECUTORS=1
# Java options passed to the JVM running Spark
SPARK_JAVA_OPTS=-Dfile.encoding=UTF-8

# Optional: path to Postgres JDBC jar inside the container (if set, Spark will include it)
POSTGRES_JDBC_PATH=/opt/bitnami/spark/jars/postgresql-42.5.0.jar

# --- App ---
MODEL_PATH=src/models/kmeans_model
SPARK_APP_NAME=Lab7App

# --- HDFS ---
HDFS_INPUT_PATH=hdfs:///data/raw/source_data.csv
HDFS_PROCESSED_PATH=hdfs:///data/mart/processed.parquet
HDFS_PREDICTIONS_PATH=hdfs:///data/predictions/preds.parquet
HDFS_RAW_PATH=hdfs:///data/raw/source_data.csv
